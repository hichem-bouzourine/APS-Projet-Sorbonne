{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "APS",
	"patterns": [
		{
			"include": "#constant"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#ctrl-statement"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#types"
		}
		
	],
	"repository": {
		"numbers":{
			"patterns": [{

			"name": "constant.numeric.aps",
			"match": "(^-?[0-9][0-9\\.]+$)"
			}]
		},

		"strings": {
			"name": "string.quoted.double.aps",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aps",
					"match": "\\\\."
				}
			]
		},
		"ctrl-statement": {
			"patterns": [
				{
					"name": "keyword.control.aps",
					"match": "\\b(ECHO|CONST|FUN|REC|VAR|PROC|CALL|SET|WHILE|RETURN|IF)\\b"
				}
			]
		},
		"constant":{
			"patterns": [
				{
					"name":"constant.language.aps",
					"match": "\\b(true|false|sub|mul|div|mod|add|eq|lt)\\b"
				}
			]
		},
		"types":{
			"patterns": [{
				"name": "entity.name.type.aps",
				"match":"\\b(bool|int|vec|->)\\b"
			}]
		},
		"operators":{
			"patterns": [{
				"name":"keyword.control.aps",
				"match": "\\b(if|and|or|var|adr|alloc|len|nth|vset)\\b"
			}]
		}
	},
	"scopeName": "source.aps"
}
